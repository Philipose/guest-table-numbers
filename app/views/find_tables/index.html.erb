<p style="color: green"><%= notice %></p>

<div class="max-w-4xl mx-auto py-5">
  <div class="w-full flex justify-center mb-4">
    <%= form_with url: find_tables_path, method: :get, data: { turbo_frame: 'project_listings' } do |form| %>
      <%= form.search_field :q, class: 'form-control w-full', placeholder: "Search for Name or Table", onchange: 'this.form.submit();' %>
    <% end %>
  </div>

  <div class="mb-4">
    <%= turbo_frame_tag 'project_listings' do %>
      <% unless @results.empty? %>
            <div class="p-2 border">
              <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                  <tr>
                    <th scope="col" class="px-6 py-3">First Name</td>
                    <th scope="col" class="px-6 py-3">Last Name</td>
                    <th scope="col" class="px-6 py-3">Table</td>
                    <th scope="col" class="px-6 py-3">More Info</td>
                  </th>
                </thead>
                <tbody>
        <% @results&.each do |find_table| %>
                <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                  <td><%= find_table.first_name %></td>
                  <td><%= find_table.last_name %></td>
                  <td><%= find_table.table_number %></td>
                  <td><%= link_to "Show", find_table, class: "text-blue-500 hover:text-blue-700", data: { turbo: false } %></td>
                </tr>
          </div>
        <% end %>
      <% end %>
                </tbody>
              </table>
    <% end %> <!-- turbo_frame_tag -->
  </div>
</div>
